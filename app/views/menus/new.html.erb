<!-- Validation failure messages -->
<% if @menu.errors.any? %>
  <% @menu.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Menu</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_menu" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for restaurant name -->
      <div class="form-group">
        <label for="restaurant_id" class="control-label">
          Restaurant name
        </label>

        <%= select_tag(:restaurant_id, options_from_collection_for_select(Restaurant.all, :id, :name), :class => "form-control") %>
        
        <p><a href="/restaurants/new">Create a new restaurant</a></p>
      </div>

      <!-- Label and input for menu name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Menu name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @menu.name %>">
      </div>

      <button class="btn btn-success">
        Create Menu
      </button>
      or
      <a href="/menus">Cancel</a>
    </form>
  </div>
</div>
