<div class="page-header">
  <h3><%= @menu.name %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Restaurant</dt>
      <dd><a href="/restaurants/<%= @menu.restaurant.id %>"><%= @menu.restaurant.name %></a></dd>

      <dt>Name</dt>
      <dd><%= @menu.name %></dd>

    </dl>

  </div>
</div>

<div class="page-header">
  <h3>Dishes</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Actions</th>
      </tr>

      <% @menu.dishes.each do |dish| %>
      <tr>
        <td><%= dish.name %></td>
        <td>
          <a href="/dishes/<%= dish.id %>" class="btn btn-primary">Show</a>
          <a href="/dishes/<%= dish.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_dish/<%= dish.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>


<div class="page-header">
  <h3>Add Dish</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_dish" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Input for hidden menu id -->
      <input type="hidden" name="menu_id" value="<%= @menu.id %>">


      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Dish name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control">
      </div>

      <button class="btn btn-success">
        Create Dish
      </button>
      or
      <a href="/dishes">Cancel</a>
    </form>
    </br>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
      <div class="btn-group btn-group-justified">
      <a href="/restaurants/<%= @menu.restaurant.id %>" class="btn btn-primary">
        Back
      </a>
      <a href="/menus/<%= @menu.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_menu/<%= @menu.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
</div>
