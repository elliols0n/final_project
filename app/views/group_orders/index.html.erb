<div class="page-header">
  <h1>
    Group orders
    <a href="/group_orders/new" class="btn btn-lg btn-success">New Group order</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Date created</th>
        <th>Order</th>
        <th>Restaurant</th>
        <th>Count of orders</th>
        <th>Actions</th>
      </tr>

      <% @group_orders.each do |group_order| %>
      <tr>
        <td><%= group_order.created_at.strftime("%d %b %Y") %></td>
        <td><%= group_order.name %></td>
        <td><%= group_order.restaurant.name %></td>
        <td><%= group_order.orders.count %></td>
        <td>
          <a href="/group_orders/<%= group_order.id %>" class="btn btn-primary">Show</a>
          <a href="/group_orders/<%= group_order.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_group_order/<%= group_order.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
