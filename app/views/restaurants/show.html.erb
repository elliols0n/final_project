<div class="page-header">
  <h3><%= @restaurant.name %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @restaurant.name %></dd>

      <dt>Cuisine</dt>
      <dd><%= @restaurant.cuisine.name %></dd>

    </dl>
  </div>
</div>
    
<div class="row">
  <div class="col-md-12 mb-2">
    <h3>Menus</h3>
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Actions</th>
      </tr>
      
      <% @restaurant.menus.each do |menu| %>
      <tr>
        <td><a href="/menus/<%= menu.id %>">
              <%= menu.name %>
            </a></td>
        <td>
          <a href="/menus/<%= menu.id %>" class="btn btn-primary">Show</a>
          <a href="/menus/<%= menu.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_menu/<%= menu.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

    <div class="btn-group btn-group-justified">
      <a href="/restaurants" class="btn btn-primary">
        Back
      </a>
      <a href="/restaurants/<%= @restaurant.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_restaurant/<%= @restaurant.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
</div>
