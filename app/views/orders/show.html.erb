<div class="page-header">
  <h3>Order #<%= @order.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>User</dt>
      <dd><%= @order.user.username %></dd>

      <dt>Group order</dt>
      <dd><a href="/group_orders/<%= @order.group_order.id %>"><%= @order.group_order.name %></a></dd>

      <dt>Restaurant</dt>
      <dd><a href="/restaurants/<%= @order.restaurant.id %>"><%= @order.restaurant.name %></a></dd>

      <dt>Menu</dt>
      <dd><a href="/menus/<%= @order.menu.id %>"><%= @order.menu.name %></a></dd>

      <dt>Dish</dt>
      <dd><%= @order.dish.name %></dd>

      <dt>User comment</dt>
      <dd><%= @order.user_comment %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/orders" class="btn btn-primary">
        Back
      </a>
      <a href="/orders/<%= @order.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_order/<%= @order.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
